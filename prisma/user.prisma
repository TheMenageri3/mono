model User {
    id          String @id @default(uuid())
    username    String?
    email       String @unique
    role        UserRole
    status      UserStatus
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt 
    deletedAt   DateTime?
    lastLogin   DateTime?

    tags        Tag[]      @relation("UserTags", references: [tagname])
}

enum UserRole {
    ADMIN
    STANDARD
    INSTRUCTOR
    MODERATOR
}

enum UserStatus {
    ACTIVE
    INACTIVE
    PENDING
    DELETED
}
