model EventAttendee {
    id                String             @id @default(uuid())
    eventId           String
    event             Event              @relation("EventAttendees", fields: [eventId], references: [id])
    userId            String  
    user              User               @relation("UserEventAttendance", fields: [userId], references: [id])
    registrationStatus RegistrationStatus
    registrationDate   DateTime          @default(now())
    notes             String?            @db.Text
    feedback          String?            @db.Text
    
    createdAt         DateTime           @default(now())
    updatedAt         DateTime           @updatedAt
    deletedAt         DateTime?

    createdById       String
    createdBy         User               @relation("EventAttendeeCreatedBy", fields: [createdById], references: [id])
    
    updatedById       String
    updatedBy         User               @relation("EventAttendeeUpdatedBy", fields: [updatedById], references: [id])

    //Added indexing for quick retrival
    @@index([eventId])
    @@index([userId])  
   
}

enum RegistrationStatus {
    REGISTERED
    WAITLISTED  
    ATTENDED
    NO_SHOW
    CANCELLED
} 